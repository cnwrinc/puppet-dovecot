## BASE CONFIG
<% if scope.lookupvar('dovecot::params::dovecot_basedir') -%>
base_dir = <%= scope.lookupvar('dovecot::params::dovecot_basedir') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_protocols') -%>
protocols = <%= scope.lookupvar('dovecot::params::dovecot_protocols') %>
<% else -%>
protocols = imap imaps pop3 pop3s
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_listen') -%>
listen = <%= scope.lookupvar('dovecot::params::dovecot_listen') %>
<% else -%>
listen = *
<% end -%>

disable_plaintext_auth = yes
shutdown_clients = yes
log_timestamp = "%Y-%m-%d %H:%M:%S "
syslog_facility = mail

!include /etc/dovecot/conf.d/*.conf
