# File managed by puppet
protocol managesieve {
  # Login executable location.
  <% if scope.lookupvar('dovecot::params::dovecot_sieve_login_executable') -%>
  login_executable = <%= scope.lookupvar('dovecot::params::dovecot_sieve_login_executable') %>
  <% end -%>

  <% if scope.lookupvar('dovecot::params::dovecot_sieve_mail_executable') -%>
  mail_executable = <%= scope.lookupvar('dovecot::params::dovecot_sieve_mail_executable') %>
  <% end -%>

  <% if scope.lookupvar('dovecot::params::dovecot_sieve_mail_location') -%>
  mail_location = <%= scope.lookupvar('dovecot::params::dovecot_sieve_mail_location') %>
  <% end -%>
}
