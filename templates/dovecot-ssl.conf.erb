# File managed by puppet
## SSL CONFIG
ssl = yes
<% if scope.lookupvar('dovecot::params::dovecot_ssl_listen') -%>
ssl_listen = <%= scope.lookupvar('dovecot::params::dovecot_ssl_listen') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_cert') -%>
ssl_cert_file = <%= scope.lookupvar('dovecot::params::dovecot_ssl_cert') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_key') -%>
ssl_key_file = <%= scope.lookupvar('dovecot::params::dovecot_ssl_key') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_key_password') -%>
ssl_key_password = <%= scope.lookupvar('dovecot::params::dovecot_ssl_key_password') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_ca') -%>
ssl_key_ca = <%= scope.lookupvar('dovecot::params::dovecot_ssl_ca') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_verif_cli_cert') -%>
ssl_verify_client_cert = <%= scope.lookupvar('dovecot::params::dovecot_ssl_verif_cli_cert') %>
<% end -%>
<% if scope.lookupvar('dovecot::params::dovecot_ssl_cipher_list') -%>
ssl_cipher_list = <%= scope.lookupvar('dovecot::params::dovecot_ssl_cipher_list') %>
<% else -%>
ssl_cipher_list = ALL:!LOW:!SSLv2
<% end -%>
