# File managed by puppet
protocol pop3 {
  # Login executable location.
  <% if scope.lookupvar('dovecot::params::dovecot_pop3_login_executable') -%>
  login_executable = <%= scope.lookupvar('dovecot::params::dovecot_pop3_login_executable') %>
  <% end -%>

  <% if scope.lookupvar('dovecot::params::dovecot_pop3_mail_max_userip_connections') -%>
  mail_max_userip_connections = <%= scope.lookupvar('dovecot::params::dovecot_pop3_mail_max_userip_connections') %>
  <% end -%>

  <% if scope.lookupvar('dovecot::params::dovecot_pop3_mail_executable') -%>
  mail_executable = <%= scope.lookupvar('dovecot::params::dovecot_pop3_mail_executable') %>
  <% end -%>
  pop3_uidl_format = %08Xu%08Xv

  <% if scope.lookupvar('dovecot::params::dovecot_pop3_plugins') -%>
  mail_plugins = <%= scope.lookupvar('dovecot::params::dovecot_pop3_plugins') %>
  <% end -%>
}

